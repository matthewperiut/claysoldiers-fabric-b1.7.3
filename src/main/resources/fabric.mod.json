{
  "schemaVersion": 1,
  "id": "claysoldiers",
  "version": "${version}",
  "name": "Clay Soldiers Mod",
  "description": "Clay Soldiers V3 reimplemented in STAPI",
  "authors": [
    "MatthewPeriut",
    "KodaichiZero"
  ],
  "contact": {
    "homepage": "https://www.minecraftforum.net/forums/mapping-and-modding-java-edition/minecraft-mods/1275357-1-0-0-clay-soldiers-classic",
    "sources": "https://github.com/matthewperiut/claysoldiers-fabric-b1.7.3",
    "issues": "https://github.com/matthewperiut/claysoldiers-fabric-b1.7.3/issues"
  },
  "license": "CC0-1.0",
  "icon": "assets/claysoldiers/icon.png",
  "environment": "*",
  "entrypoints": {
    "stationapi:event_bus": [
      "com.matthewperiut.claysoldiers.ClaySoldiersMod",
      "com.matthewperiut.claysoldiers.item.ItemListener",
      "com.matthewperiut.claysoldiers.recipe.RecipeListener",
      "com.matthewperiut.claysoldiers.entity.EntityListener"
    ],
    "stationapi:event_bus_client": [
      "com.matthewperiut.claysoldiers.texture.TextureListener",
      "com.matthewperiut.claysoldiers.client.EntityRendererListener"
    ],
    "bhcreative:event_bus": [
      "com.matthewperiut.claysoldiers.optional.BHCreativeSupport"
    ]
  },

  "depends": {
    "fabricloader": ">=0.13.3",
    "minecraft": "1.0.0-beta.7.3",
    "stationapi": ">=2.0.0-alpha.3"
  },

  "recommends": {
    "modmenu": "*"
  }
}
